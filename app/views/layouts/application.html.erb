<!DOCTYPE html>
<html>
<head>
  <title>Toddlr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <form action="<%= prattles_path %>" method="post">
    <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">
    <input type="text"
           name="prattle[content]"
           placeholder="prattle on" autofocus="true">
  </form>

  <%= button_to "Log out", session_path, method: :delete %>
<% end %>

<% if flash[:message] %>
  <div class="message">
    <%= flash[:message] %>
  </div>
<% end %>


<%= yield %>

</body>
</html>
