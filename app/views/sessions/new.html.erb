<form action="<%= session_path %>" method="post" autocomplete="off">
  <h1>Sign in to Todd.lr</h1>

  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">
  <input type="text"
         name="user[username]"
         placeholder="user name">
  <input type="password"
         name="user[password]"
         placeholder="password">
  <input type="submit" value="Do it!">
  <div class="text-center">- or -</div>
  <a class="button" href="<%= new_user_path %>">Sign up, instead!</a>
</form>
